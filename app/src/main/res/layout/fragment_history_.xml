<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFFFFF"
tools:context=".Views.HistoryFragmentView">

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/historyRecycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

<ImageView
    android:id="@+id/historyImage"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:src="@drawable/ic_android_circle"
    android:visibility="invisible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHeight_percent="0.6"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintWidth_percent="0.6" />

<TextView
    android:id="@+id/historyText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp"
    android:text="@string/no_history_trips"
    android:visibility="invisible"
    android:textColor="#C1C1C1"
    android:textSize="30sp"
    app:layout_constraintBottom_toBottomOf="@+id/historyImage"
    app:layout_constraintEnd_toEndOf="@id/historyImage"
    app:layout_constraintStart_toStartOf="@id/historyImage" />
</androidx.constraintlayout.widget.ConstraintLayout>