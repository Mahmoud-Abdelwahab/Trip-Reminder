<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/Note"
        android:layout_width="209dp"
        android:layout_height="35dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="31dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:buttonTint="#C81E2F"
        android:shadowColor="#C81E2F"
        android:textColor="#C81E2F"
        android:textColorHighlight="#C81E2F"
        android:textColorHint="#C81E2F"
        android:textColorLink="#C81E2F"
        app:layout_constraintStart_toEndOf="@+id/Note"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>