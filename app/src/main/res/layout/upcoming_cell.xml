<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="7dp"
    android:layout_marginRight="20dp"

    android:layout_marginBottom="7dp"
    android:background="#FFFFFF"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="10dp">

        <Button
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-15dp"
            android:layout_marginRight="0dp"
            android:background="@null"
            android:clickable="true"
            android:foreground="?selectableItemBackground"

            android:drawableLeft="@drawable/ic_more_vert_black_24dp"

        />

        <Button
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="150dp"
            android:layout_marginRight="18dp"
            android:background="@null"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:drawableLeft="@drawable/ic_note_add_black_24dp" />

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/myphoto" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:textSize="30sp"
            android:textColor="#c81e2f"


            />


        <TextView
            android:id="@+id/start_point_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_title"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"



            android:layout_toRightOf="@id/start_point_label" />

        <TextView
            android:id="@+id/start_point_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_title"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Start Point:"
            android:textColor="#FF000000"
            android:textStyle="bold" />/>
        <TextView
            android:id="@+id/end_point_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_point_details"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/end_point_label" />

        <TextView
            android:id="@+id/end_point_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_point_label"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="5dp"
            android:text="End Point:"
            android:textColor="#FF000000"
            android:textStyle="bold" />/>
        <TextView
            android:id="@+id/date_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/end_point_details"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/date_label" />

        <TextView
            android:id="@+id/date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/end_point_label"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="5dp"
            android:text="Date:"
            android:textColor="#FF000000"
            android:textStyle="bold" />/>
        <TextView
            android:id="@+id/time_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_details"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/time_label" />

        <TextView
            android:id="@+id/time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_label"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="5dp"
            android:text="Time:"
            android:textColor="#FF000000"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_label"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"

            android:layout_marginBottom="7dp"

            android:background="#FFFFFF"
            android:text="Start"
            android:textColor="#c81e2f"
            android:textSize="25sp"
            android:textStyle="bold"
            android:clickable="true"
            android:foreground="?selectableItemBackground">Start
        </Button>



    </RelativeLayout>
</androidx.cardview.widget.CardView>